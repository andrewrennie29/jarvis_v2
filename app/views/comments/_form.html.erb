<%= form_for ([@todo, @comment]), :url => todo_comments_path(params[:todo_id]), :remote => true, :html => { :class => "form-horizontal" } do |f| %>
  <!-- Modal -->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= Todo.find_by_id(params[:todo_id]).name.titleize %></h4>
        <%= Todo.find_by_id(params[:todo_id]).details %>
      </div>
      <div class="modal-body">
        <% if @comment.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

            <ul>
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div id="comments-go-here">
          <%= render partial: 'comments/allcomments' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.hidden_field :todo_id, :value => params[:todo_id] %>
        <%= f.text_area :details, :class => "form-control", :placeholder => "Enter comment" %></br>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Create comment", :class => "btn btn-primary" %>
      </div>

<% end %>
