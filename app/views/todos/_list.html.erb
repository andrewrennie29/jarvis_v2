

<% todos.each do |todo| %>
  <div class = "row">
    <p>
      <div class = "col-md-7">
        <div class = "col-md-10"><%= link_to todo.name, todo %></div>
        <div class = "col-md-1"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span></div>
        <div class = "col-md-1"><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, todo, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
      <div class = "col-md-2" id = "todostatus<%= todo.id %>"><%= render partial: 'statuses/update', locals: { status: todo.status } %></div>
      <div class = "col-md-3">
      <%= form_for todo do |f| %>
        <script type="text/javascript">
          $(function () {
          $('#tododatetimepicker<%= todo.id %>').datetimepicker({ showTodayButton: true, defaultDate: "<%= Date.today.strftime("%m/%d/%Y") %>", format: "YYYY-MM-DD" });
          });
        </script>
        <div class="input-group input-group-sm" id='tododatetimepicker<%= todo.id %>' onChange="this.parentNode.submit();">
          <span class="input-group-addon" id="basic-addon1">
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
          </span>
          <%= f.text_field :assigneddate, :class => "form-control" %>
        </div>
      <% end %>
      </div>
    </p>
  </div>
<% end %>