<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta name="description" content="Jarvis: My Organiser">
   <meta name="author" content="Andrew Rennie">
  <title>Jarvis</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>

<%= render partial: 'layouts/navbar' %>

<div class = "container">
  <div class = "row">

		<% unless flash.notice.nil? %> <div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= flash.notice %></div> <% end %>
		<% if session[:user_id].nil? %> 
			<div class = "col-md-1"></div> 
			<div class = "col-md-10"><%= render partial: 'sessions/login' %></div>
			<div class = "col-md-1"></div> 
		<% else %> 
			<div class = "col-md-1"> <%= render partial: 'layouts/sidebar' %> </div>
			<div class = "col-md-10"><%= yield %></div>
			<div class = "col-md-1"> <%= render partial: 'layouts/sidebar' %> </div>
		<% end %> 

	</div>
</div>

<div id="new-project-modal" class="modal fade">
	<div class="modal-dialog">
		<div id="inner-new-project-modal" class="modal-content"></div>
	</div>
</div>

<div id="new-todo-modal" class="modal fade">
	<div class="modal-dialog">
		<div id="inner-new-todo-modal" class="modal-content"></div>
	</div>
</div>

<div id="new-comment-modal" class="modal fade">
	<div class="modal-dialog">
		<div id="inner-new-comment-modal" class="modal-content"></div>
	</div>
</div>

</body>
</html>
